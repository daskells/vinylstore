<p id="notice"><%= notice %></p>

<h1>Catalogue</h1>

<table>
  <thead>
    <tr>
      <th class="heading"></th>
      <th class="heading">Title</th>
      <th class="heading">Artist</th>
      <th class="heading">Price</th>
      <th class="heading">Genre</th>
      <th class="heading">Label</th>
      <th class="heading">Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody class="catalog">
    <% @items.each do |item| %>
      <tr class="catalog">
        <td class="catalog"><%= link_to (image_tag item.image_url), item %></td>
        <td class="catalog"><%= item.title %></td>
        <td class="catalog"><%= item.artist %></td>
        <td class="catalog"><%= number_to_currency(item.price, :unit => "â‚¬") %></td>
        <td class="catalog"><%= item.genre %></td>
        <td class="catalog"><%= item.label %></td>
        <td class="catalog"><%= item.year %></td>
        <% if user_signed_in? %>
          <td class="catalog"><a href="/cart/<%= item.id %>">Add to Cart</a></td>
        <% end %>
        <td class="link catalog"><%= link_to 'Show', item %></td>
        <% if user_signed_in? %>
        <td class="link catalog"><%= link_to 'Edit', edit_item_path(item) %></td>
        <td class="link catalog"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Item', new_item_path %>
<% end %>
